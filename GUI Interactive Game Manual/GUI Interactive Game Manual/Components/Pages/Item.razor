@page "/items"
@using Text_BasedAdventure
@inject GUIInteractiveGameManual.Services.IMazeServices MazeService

<h2 style="text-align: center; font-family: 'Segoe UI', Tahoma, sans-serif;">Items</h2>

<!-- Section displaying all weapons from MazeService.Items -->
<h3 style="color: #007BFF; margin-top: 20px;">Weapons</h3>
<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
    @foreach (var item in MazeService.Items.OfType<Weapon>())
    {
        <div style="border: 1px solid #ccc; border-radius: 8px; padding: 20px; max-width: 300px; text-align: center;">
            <img src="https://th.bing.com/th?id=OIP.S10OzrcaX4rJVWrm1oIJrgAAAA&w=333&h=187&c=8&rs=1&qlt=90&o=6&pid=3.1&rm=2" alt="@item.Name" style="max-width: 100%; height: auto; border-radius: 8px;" />
            <h4 style="margin: 10px 0; color: #007BFF;">@item.Name</h4>
            <p><strong>Attack Modifier:</strong> @item.AttackModifier</p>
            <a href="@($"/item/{item.Name}")" style="display: inline-block; padding: 8px 16px; background-color: #28a745; color: white; border-radius: 4px; text-decoration: none;">View Details</a>
        </div>
    }
</div>

<!-- Section displaying all potions from MazeService.Items -->
<h3 style="color: #FF6347; margin-top: 40px;">Potions</h3>
<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
    @foreach (var item in MazeService.Items.OfType<Potion>())
    {
        <div style="border: 1px solid #ccc; border-radius: 8px; padding: 20px; max-width: 300px; text-align: center;">
            <img src="https://th.bing.com/th?id=OIP._LkVdd6EUGH3T7wrwdj5cQHaI8&w=227&h=274&c=8&rs=1&qlt=90&o=6&pid=3.1&rm=2 alt="@item.Name" style="max-width: 100%; height: auto; border-radius: 8px;" />
            <h4 style="margin: 10px 0; color: #FF6347;">@item.Name</h4>
            <p><strong>Heal Amount:</strong> @item.HealAmount</p>
            <a href="@($"/item/{item.Name}")" style="display: inline-block; padding: 8px 16px; background-color: #FF6347; color: white; border-radius: 4px; text-decoration: none;">View Details</a>
        </div>
    }
</div>

