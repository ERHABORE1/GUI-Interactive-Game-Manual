
 @page "/"

<div class="home-container">
 
        <!-- Introduction section with welcome message and link to enter the maze -->
    <section class="intro">
        <h1>Welcome to the Game Manual</h1>
        <p>
            Explore the interactive game manual for our exciting adventure game!
            Learn how to control your character, navigate the maze, fight monsters, and collect powerful items.
        </p>
        <a href="/maze" class="primary-button">Enter the Maze</a>
    </section>
    <!-- Section that introduces different parts of the game manual -->
    <section class="game-sections">
        <h2>Explore the Game Manual</h2>
        <div class="sections-grid">
            <div class="section-card">
                <h3>Characters</h3>
                <p>Meet the heroes and villains of the game. Learn about their stats and abilities.</p>
                <a href="/characters" class="secondary-button">View Characters</a>
            </div>
            <!-- Card for viewing Items -->
            <div class="section-card">
                <h3>Items</h3>
                <p>Discover powerful weapons and potions that will help you on your journey.</p>
                <a href="/items" class="secondary-button">View Items</a>
            </div>
            <!-- Card for viewing Notes -->
            <div class="section-card">
                <h3>Notes</h3>
                <p>Keep track of important information as you explore the game world.</p>
                <a href="/notes" class="secondary-button">View Notes</a>
            </div>
        </div>
    </section>

</div>
<!-- Styles for home page -->
<style>
  
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
    }

    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px;
    }

    h1, h2 {
        text-align: center;
        color: #333;
    }

    p {
        color: #555;
        line-height: 1.6;
    }

    a {
        text-decoration: none;
    }

    /* Intro Section */
    .intro {
        text-align: center;
        padding: 20px;
        margin-bottom: 40px;
    }

        .intro h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .intro p {
            font-size: 18px;
            margin-bottom: 30px;
        }

    .primary-button {
        display: inline-block;
        background-color: #007BFF;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .primary-button:hover {
            background-color: #0056b3;
        }

    /* Game Sections */
    .game-sections {
        padding: 20px 0;
    }

    .sections-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 20px;
    }

    .section-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

        .section-card h3 {
            margin-bottom: 15px;
            font-size: 22px;
            color: #333;
        }

        .section-card p {
            margin-bottom: 20px;
            font-size: 16px;
            color: #666;
        }

    .secondary-button {
        display: inline-block;
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .secondary-button:hover {
            background-color: #218838;
        }

</style>